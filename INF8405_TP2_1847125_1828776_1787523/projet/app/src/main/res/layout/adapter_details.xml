<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">
    <!-- android:background="#5ba0d0" -->

    <ImageView
        android:layout_weight="1"
        android:id="@+id/picture_bluetooth_details"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bluetooth" />

    <LinearLayout
        android:id="@+id/bluetooth_item"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bluetooth_item_body"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bluetooth_name"
                android:textStyle="bold"
                android:text="Bluetooth"
                android:textSize="18sp"
                android:textColor="#1e1e1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/bluetooth_description"
                android:textStyle="italic"
                android:text="Description"
                android:textSize="12sp"
                android:textColor="#1e1e1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/bluetooth_distance"
            android:layout_weight="0.5"
            android:text=""
            android:textSize="14sp"
            android:textColor="#1e1e1e"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
</LinearLayout>
